<div class="content">
  <h1>The Official Guestbook</h1>
  <p>Hello there</p>
</div>

<div class="comments">
  <h3>The Guestbook</h3>
  <% @guestbooks.each do |guestbook| %>
    <div class="content-sidebar comment <%= "moderator" if is_moderator? guestbook.author %>">
      <div class="sidebar">
        <p>
          <strong><%= guestbook.author %></strong>
          <em><%= guestbook.created_at.strftime("%b %-d, %Y @ %l:%M %P") %></em>
        </p>
      </div>
      <div class="content">
        <%= guestbook.body %>
      </div>
    </div>
  <% end %>
</div>
