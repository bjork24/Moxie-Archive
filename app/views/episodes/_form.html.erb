<%= form_for(@episode) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :thumbnail %><br />
    <%= f.text_field :thumbnail %>
  </div>
  <div class="field">
    <%= f.label :backup %><br />
    <%= f.text_field :backup %>
  </div>
  <div class="field">
    <%= f.label :embed %><br />
    <%= f.text_area :embed %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :credits %><br />
    <%= f.text_area :credits %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
