<div class="content-sidebar post">
  <div class="sidebar">
    <p>
      <strong>Episode #<%= @episode.id %></strong>
      <em><%= @episode.created_at.strftime("%b %-d, %Y") %></em>
    </p>
    <%= content_tag :p, raw(@episode.credits), :class => "credits" %>
  </div>
  <div class="content">
    <h1><%= raw(@episode.title) %></h1>
    <%= raw(@episode.embed) %>
    <%= simple_format(@episode.body.strip) %>
  </div>
</div>
