<div class="content-sidebar">
  <div class="sidebar">
    <p>By <%= link_to @post.author.name, @post.author %></p>
    <p>Categories:</p>
    <ul>
      <% @post.categories.each do |c| %>
        <li><%= link_to c.name, c %></li>
      <% end %>
    </ul>
  </div>
  <div class="content">
    <h1><%= @post.title %></h1>
    <%= simple_format(@post.body.strip) %>
  </div>
</div>

<% if @post.comments.size > 0 %>
  <div class="comments">
    <h3><%= pluralize(@post.comments.size,"Comment") %></h3>
    <% @post.comments.each do |comment| %>
      <div class="content-sidebar comment">
        <div class="sidebar">
          <strong><%= comment.author %></strong>
          <em><%= comment.created_at.strftime("%b. %-d, %Y @ %l:%M %P") %></em>
        </div>
        <div class="content">
          <%= simple_format(comment.body) %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <h3>No Comments</h3>
<% end %>