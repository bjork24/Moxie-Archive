<h1><%= @post.title %></h1>

<div><%= simple_format(@post.body.strip) %></div>

<p>By <%= link_to @post.author.name, @post.author %></p>
<p>Categories:</p>
<ul>
<% @post.categories.each do |c| %>
  <li><%= link_to c.name, c %></li>
<% end %>
</ul>

<hr/>

<% if @post.comments.size > 0 %>
  <h3><%= pluralize(@post.comments.size,"Comment") %></h3>
  <ol>
  <% @post.comments.each do |comment| %>
    <li>
      <blockquote><%= comment.body %></blockquote>
      <p><%= comment.author %>, <%= comment.created_at.strftime("%A, %B %e, %Y at %l:%M %p") %></p>
    </li>
  <% end %>
  </ol>
<% else %>
  <h3>No Comments</h3>
<% end %>

<div>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>
