<%= render "year_nav", :show_months => true %>

<div class="content">
  
  <h1><%= @current_year %> Posts</h1>
  
</div>

<% (1..12).each do |month| %>
  <a name="<%= month %>"></a>
  <div class="post-index content-sidebar">
    <div class="sidebar">
      <%= Date.new(@current_year.to_i,month).strftime("%B %Y") %>
    </div>
    <div class="content">
      <% if Post.posts_by_month(@current_year,month).size > 0 %>
        <ul>
          <% Post.posts_by_month(@current_year,month).each do |post| %>
            <li><%= "#{post.created_at.strftime('%d')}." %> <%= make_post_link(post) %></li>
          <% end %>
        </ul>
      <% else %>
        <h4>No Posts for this month</h4>
      <% end %>
    </div>
  </div>
<% end %>

<%= render "year_nav", :show_months => false %>